<%- model_class = @expert_system.class -%>
<%= provide(:title, t('helpers.titles.show', :model => model_class.model_name.human,
                      :default => "Show #{model_class.model_name.human}")) %>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @expert_system.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:user_id) %>:</strong><br>
  <%= @expert_system.user_id %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              expert_systems_path, :class => 'btn'  %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              expert_system_path(@expert_system),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
